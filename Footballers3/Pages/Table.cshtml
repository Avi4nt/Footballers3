@model Footballers3.Pages.TableModel

@{
    ViewData["Title"] = "Index";
}

<h1>Table</h1>

<p>
    <a asp-page="Index">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Footballer[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Footballer[0].Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Footballer[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Footballer[0].Birth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Footballer[0].Team)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Footballer[0].Country)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Footballer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Team)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
