@page
@model Footballers3.Pages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Footballer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Footballer.Name" class="control-label"></label>
                <input asp-for="Footballer.Name" class="form-control" />
                <span asp-validation-for="Footballer.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Footballer.Surname" class="control-label"></label>
                <input asp-for="Footballer.Surname" class="form-control" />
                <span asp-validation-for="Footballer.Surname" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Footballer.Gender" class="control-label"></label>
                <select asp-for="Footballer.Gender" class="form-control">
                    <option>Male</option>
                    <option>Female</option>
                </select>
            </div>
   
            <div class="form-group">
                <label asp-for="Footballer.Birth" class="control-label"></label>
                <input asp-for="Footballer.Birth" class="form-control" />
                <span asp-validation-for="Footballer.Birth" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Footballer.Team" class="control-label"></label>
                <input asp-for="Footballer.Team" class="form-control" list="team" />
                <datalist id="team">
                    @{
                        List<string> newList = new List<string>();
                        foreach (var item in  Model.Footballers)
                        {
                            if (!newList.Contains(item.Team))
                            {
                                newList.Add(item.Team);
                                <option>@Html.DisplayFor(modelItem => item.Team)</option>
                            }
                        }
                     }
                </datalist>
                <span asp-validation-for="Footballer.Team" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Footballer.Country" class="control-label"></label>
                <select asp-for="Footballer.Country" class="form-control">
                    <option>Russia</option>
                    <option>USA</option>
                    <option>Italy</option>
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Table">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
